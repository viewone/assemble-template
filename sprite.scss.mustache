/**
 * Icon classes can be used entirely standalone. They are named after their original file names.
 *
 * <i class="sprite-home"></i>
 */

 %sprite,
 .sprite {
     display: block;
     background-image: url({{{items.0.escaped_image}}});
 }

{{#items}}
%sprite-{{name}},
.sprite-{{name}} {
    @extend %sprite;

    background-position: {{px.offset_x}} {{px.offset_y}};
    width: {{px.width}};
    height: {{px.height}};
}
{{/items}}
